# Database Configuration
# PostgreSQL connection string for the database
DATABASE_URL=postgresql://user:password@localhost:5432/verisentinel

# Default password for users (Modify or set this value for initial users)
DEFAULT_PASSWORD=your-password

# Authentication Secret
# Used for signing JWT tokens and securing sessions
SESSION_SECRET=your-secure-session-secret-here

# Server Configuration
PORT=5000
NODE_ENV=development

# Optional: External Service API Keys
# If integrating with external services, add their API keys here
# EXAMPLE_API_KEY=your-api-key-here

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=notifications@verisentinel.com

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Redis Configuration (for scaling)
# REDIS_URL=redis://localhost:6379

# Feature Flags
# Enable/disable specific features
ENABLE_AUDIT_LOGGING=true
ENABLE_HARDWARE_SCANNING=false